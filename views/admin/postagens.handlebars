<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem:</button></a>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <small>Slug: {{slug}}</small>
        <p>Descrição: {{descricao}}</p>
        <small>{{data}}</small>
        <small>Categoria: {{categoria.nome}}</small>
        <p>Conteudo: {{conteudo}}</p>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar postagem</button></a>
        <input type="hidden" name="id" value="{{_id}}">
        <br>
        <a href="/admin/postagens/deletar/{{_id}}"><button type="submit" class="btn btn-danger mt-2">Deletar
                postagem</button></a>

    </div>
</div>
{{else}}
<h4 class="mt-4">Nenhuma postagem registrada</h4>
{{/each}}