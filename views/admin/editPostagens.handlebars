{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar postagem:</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="nome">Titulo: </label>
            <input type="text" id="titulo" name="titulo" placeholder="titulo da postagem" class="form-control" value="{{postagem.titulo}}" required>
            <label for="nome">Descricao: </label>
            <input type="text" id="descricao" name="descricao" placeholder="descricao da postagem" class="form-control" value="{{postagem.descricao}}" required>
            <label for="nome">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="slug da postagem" class="form-control" value="{{postagem.slug}}" required>
            <label for="nome">Conteudo: </label>
            <textarea name="conteudo" class="form-control" placeholder="Conteudo da postagem" required>{{postagem.conteudo}}</textarea>
             <label for="categoria">Categoria: </label>
        <select name="categoria" class="custom-select mb-4">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
        </select>
            <a href="/admin/postagens/edit/{{_id}}"><button type="submit" class="btn btn-success">Editar postagem</button></a>
        </form>
    </div>
</div>